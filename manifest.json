{
  "manifest_version": 3,
  "name": "Bing Direct Links",
  "version": "1.1.0",
  "description": "Replace Bing tracking redirect links with the actual destination URLs.",
  "host_permissions": ["*://*.bing.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.bing.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    }
  ],
  "action": {
    "default_title": "Bing Direct Links"
  }
}
